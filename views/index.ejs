<!doctype html>
<html>
    <head>
        <%- include('layouts/main'); %>
        <title>Input de Producto</title>
    </head>
    <body>
        <div class="container border mt-5 p-3 bg-light">
            <h1 class="mb-3">Ingrese un producto</h1>
            <form action="./input" method="POST">
                <div class="form-group">
                    <label for="title">Nombre:</label>
                    <input class="form-control" name="title" type="text" placeholder="nombre de su producto" />
                </div>
                <div class="form-group">
                    <label for="price">Precio:</label>
                    <input class="form-control" name="price" type="text" placeholder="precio de su producto" />
                </div>
                <div class="form-group">
                    <label for="thumbnail">Image Url:</label>
                    <input class="form-control" name="thumbnail" type="text" placeholder="thumbnail de su producto" />
                </div>
        
                <button class="btn btn-success" type="submit">Enviar</button>
            </form>
        </div>
    </body>
</html>