doctype html
html
    include ../layouts/main.pug
    body
        div(class="container")
            unless products
                p No hay productos cargados
            table(class="table table-striped table-dark")
                thead
                    tr
                        th(scope="col") #
                        th(scope="col") Producto
                        th(scope="col") Precio
                        th(scope="col") Imagen
                tbody
                    each product in products
                        tr
                            th(scope="row" class="align-middle") 
                                p(class="m-0 p-0") #{product.id}
                            td(class="align-middle") 
                                p(class="m-0 p-0") #{product.title}
                            td(class="align-middle")
                                p(class="m-0 p-0") #{product.price}
                            td(class="align-middle") 
                                img(src=product.thumbnail style="height: 50px" class="img-fluid" alt="...")