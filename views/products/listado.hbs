<!DOCTYPE html>
<html>
    <body>
        <div class="container">
            {{#if products}}
            <table class="table table-striped table-dark">
                <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Producto</th>
                            <th scope="col">Precio</th>
                            <th scope="col">Imagen</th>
                        </tr>
                </thead>

                <tbody>
                {{#each products}}
                <tr>
                    <th scope="row" class="align-middle"><p class="m-0 p-0">{{id}}</p></th>
                    <td class="align-middle"><p class="m-0 p-0">{{title}}</p></td>
                    <td class="align-middle"><p class="m-0 p-0">{{price}}</p></td>
                    <td class="align-middle"><img src={{thumbnail}} style="height: 50px" class="img-fluid" alt="..."></td>
                </tr>
                {{/each}}
                </tbody>

            </table>
            {{else}}
                <p>No hay productos cargados</p>
            {{/if}}
        </div>
    </body>
</html>