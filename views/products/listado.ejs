<!DOCTYPE html>
<html>
        <%- include('../layouts/main.ejs') %>
    <body>
        
        <div class="container">
            <% if (products) { %>
                <table class="table table-striped table-dark">
                    <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Producto</th>
                                <th scope="col">Precio</th>
                                <th scope="col">Imagen</th>
                            </tr>
                    </thead>

                    <tbody>
                    <% products.forEach(function(product) { %>
                    <tr>
                        <th scope="row" class="align-middle"><p class="m-0 p-0"><%= product.id %></p></th>
                        <td class="align-middle"><p class="m-0 p-0"><%= product.title %></p></td>
                        <td class="align-middle"><p class="m-0 p-0"><%= product.price %></p></td>
                        <td class="align-middle"><img src="<%= product.thumbnail %>" style="height: 50px" class="img-fluid" alt="..."></td>
                    </tr>
                    <% }) %>
                    </tbody>

                </table>
            <% } %>
            <% if (!products) { %>
                <p>No hay productos cargados</p>
            <% } %>
        </div>
    </body>
</html>